{
  "name": "RS_Rate",
  "version": "1.0.4",
  "version_name": "1.0.4-alpha",
  "description": "Allows to rate scientific publications on the RS_Server component of Readersourcing 2.0",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "src/js/background.js"
    ],
    "persistent": false
  },
  "default_locale": "it",
  "page_action": {
    "default_title": "Press on this button to rate this publication",
    "default_popup": "src/views/rating.html",
    "default_icon": {
      "16": "src/img/icon16.png",
      "32": "src/img/icon32.png",
      "48": "src/img/icon48.png",
      "128": "src/img/icon128.png"
    }
  },
  "icons": {
    "16": "src/img/icon16.png",
    "32": "src/img/icon32.png",
    "48": "src/img/icon48.png",
    "128": "src/img/icon128.png"
  },
  "options_ui": {
    "page": "src/views/options.html",
    "open_in_tab": false
  }
}