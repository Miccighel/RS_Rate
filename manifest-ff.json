{
  "applications": {
    "gecko": {
      "id": "rs-rate@readersourcing.com"
    }
  },
  "name": "Readersourcing 2.0: RS_Rate",
  "short_name": "RS_Rate",
  "version": "1.0.6",
  "description": "Allows to rate scientific publications on the RS_Server component of Readersourcing 2.0",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "src/js/background.js"
    ]
  },
  "default_locale": "en",
  "browser_action": {
    "browser_style": true,
    "default_popup": "src/views/rating.html",
    "default_icon": {
      "16": "src/img/icon16.png",
      "32": "src/img/icon32.png",
      "48": "src/img/icon48.png",
      "128": "src/img/icon128.png"
    }
  },
  "icons": {
    "16": "src/img/icon16.png",
    "32": "src/img/icon32.png",
    "48": "src/img/icon48.png",
    "128": "src/img/icon128.png"
  },
  "options_ui": {
    "page": "src/views/options.html",
    "open_in_tab": false
  },
  "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}